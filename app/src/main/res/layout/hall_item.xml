<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hall_cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryVeryLight"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/hall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_table_standart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hall_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_guests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_sumbill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_sumguest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorBackground">
        </View>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hall_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimaryVeryLight"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hall_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_bills_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_guests_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_payment_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_sumguest_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/hall_sumbill_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>