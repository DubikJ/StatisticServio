<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sales_article_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/sales_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/sales_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/sales_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/sales_basetotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/sales_tax1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.15"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_table_standart"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorBackground">
        </View>

    </LinearLayout>

</LinearLayout>